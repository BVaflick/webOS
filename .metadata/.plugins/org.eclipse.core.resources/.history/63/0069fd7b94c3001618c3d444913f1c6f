<!DOCTYPE html>
<html>
<head>
<style type="text/css">
body {
		width: 100%;
		height: 100%;
		background-color: #202020;
}

p {
	    display: table-cell;
		vertical-align: middle;
		text-align:center;
		color: #FFFFFF;
}
lg_red { 
		color: #d80546;
}
</style>
	<script>
	document.addEventListener("keydown", function(event){
		var keycode = "<h1> keycode:<lg_red>" + event.keyCode + "</lg_red></h1>"+ "</br>";
		document.getElementById("results").innerHTML = keycode;
	});
	document.addEventListener("mousemove", function(event){
		var coordinate = "<h1> x:<lg_red>" + event.pageX + "</lg_red></h1>"+ "</br>";
		document.getElementById("cursor_x").innerHTML = coordinate;
		coordinate = "<h1> y:<lg_red>" + event.pageY + "</lg_red></h1>"+ "</br>";
		document.getElementById("cursor_y").innerHTML = coordinate;
	});
	
</script>
</head>
<body>
	<div id="results">
		<p>Press a Key</p>
	</div>
	<div id="cursor_x">
		<p>x:</p>
	</div>
	<div id="cursor_y">
		<p>y:</p>
	</div>
</body>
</html>
